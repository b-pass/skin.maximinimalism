                                <posx>6</posx>
                                <posy>6</posy>
                                <height>330</height>
                                <width>330</width>
                                <align>left</align>
                                <aspectratio>keep</aspectratio>
                                <texture>$INFO[Container($PARAM[ListId]).ListItem.Art(icon)]</texture>
                            </control>
                            <control type="label">
                                <posx>5-col</posx>
                                <posy>0</posy>
                                <width>13-col</width>
                                <height>1-row</height>
                                <font>largeStrong</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>black</shadowcolor>
