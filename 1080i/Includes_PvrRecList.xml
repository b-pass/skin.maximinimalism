                                <width>13-col</width>
                                <height>1-row</height>
                                <font>small</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>black</shadowcolor>
                                <label>$INFO[Container($PARAM[ListId]).ListItem.ChannelName]   |   $INFO[Container($PARAM[ListId]).ListItem.StartDate] at $INFO[Container($PARAM[ListId]).ListItem.StartTime]</label>
                            </control>
                            <control type="textbox">
