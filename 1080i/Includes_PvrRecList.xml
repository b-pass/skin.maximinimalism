                                <posx>5-col</posx>
                                <posy>1-row</posy>
                                <width>10-row</width>
                                <height>1-row</height>
                                <font>small</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>black</shadowcolor>
                                <label>$INFO[Container($PARAM[ListId]).ListItem.ChannelName]</label>
                            </control>
                            <control type="label">
                                <posx>5-col</posx>
                                <posy>2-row</posy>
                                <width>10-row</width>
                                <height>1-row</height>
                                <font>regular</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>black</shadowcolor>
                                <visible>IntegerGreaterThan(Container($PARAM[ListId]).NumItems,1)</visible>
                                <label>$INFO[Container($PARAM[ListId]).NumItems] episodes</label>
                            </control>
                            <control type="label">
                                <posx>5-col</posx>
                                <posy>2-row</posy>
                                <width>10-row</width>
                                <height>1-row</height>
                                <font>regular</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>black</shadowcolor>
                                <visible>!IntegerGreaterThan(Container($PARAM[ListId]).NumItems,1) + IntegerGreaterThan(Container($PARAM[ListId]).NumItems,0)</visible>
                                <label>One episode</label>
                            </control>
