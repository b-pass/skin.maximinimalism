                        <posy>-10</posy>
                        <height>8-row</height>
                    </control>
                    
                    <control type="group">
                        <posx>col-6-begin</posx>
                        <posy>8-row</posy>
                        <width>18-col</width>
                        <height>6-row</height>
                        
                        <control type="image">
                            <width>18-col</width>
                            <height>6-row</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>colors/black.png</texture>
                            <colordiffuse>99FFFFFF</colordiffuse>
                        </control>
