                    </control>
                </control>
            </control>
        </control>
        <!--hidden button to handle dialog autohide-->
        <control type="button" id="9876">
            <posx>0</posx>
            <posy>0</posy>
            <height>1-col</height>
            <width>1-col</width>
            <onup>8000</onup>
            <ondown>8000</ondown>
