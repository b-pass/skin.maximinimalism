<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!--movies-->
    <include name="movieRecentItems">
        <control type="panel" id="9998">
            <visible>!stringcompare(Window(Home).Property(Movies.UnWatched),0)</visible>
            <posx>-12</posx>
            <posy>0</posy>
            <width>1548</width>
            <include condition="!stringcompare(Window(Home).Property(Episodes.UnWatched),0)">recentItemsHalfHeight</include>
            <include condition="stringcompare(Window(Home).Property(Episodes.UnWatched),0)">recentItemsFullHeight</include>
            <onleft>9000</onleft>
            <ondown>control.setfocus(9997,$INFO[Container(9998).Position])</ondown>
            <onback>activateWindow(home)</onback>
            <animation type="windowopen">
                <include>listSlideIn</include>
            </animation>
            <animation type="windowclose">
                <effect type="fade" start="100" end="0" time="300"/>
            </animation>
            <content target="video">plugin://service.library.data.provider?type=recentmovies&amp;reload=$INFO[Window.Property(recentmovies)]</content>
            <itemlayout width="387" height="362">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>363</width>
                    <height>269</height>
                    <aspectratio>scale</aspectratio>
                    <texture fallback="colors/black.png" border="0">$INFO[ListItem.Art(fanart)]</texture>
                    <bordertexture border="3" colordiffuse="33FFFFFF">colors/selected.png</bordertexture>
                    <bordersize>3</bordersize>
                    <colordiffuse>ffffffff</colordiffuse>
                </control>
                <control type="group">
                    <posx>0</posx>
                    <posy>272</posy>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>363</width>
                        <height>64</height>
                        <aspectratio>stretch</aspectratio>
                        <texture>colors/black.png</texture>
                        <bordersize>0</bordersize>
                        <colordiffuse>77FFFFFF</colordiffuse>
                    </control>
                    <control type="label">
                        <posx>12</posx>
                        <posy>-11</posy>
                        <width>339</width>
                        <font>itemTitleSmallCondensed</font>
                        <textcolor>selected</textcolor>
                        <label>$INFO[listitem.Title]</label>
                    </control>
                    <control type="label">
                        <posx>12</posx>
                        <posy>18</posy>
                        <width>339</width>
                        <font>smallMedium</font>
                        <textcolor>selected</textcolor>
                        <label>$INFO[listitem.year,, •] $INFO[listitem.duration,, $LOCALIZE[31018]]</label>
                    </control>
                </control>
            </itemlayout>
            <focusedlayout width="387" height="362">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>363</width>
                    <height>269</height>
                    <aspectratio>scale</aspectratio>
                    <texture fallback="colors/black.png" border="0">$INFO[ListItem.Art(fanart)]</texture>
                    <bordertexture border="3" colordiffuse="ffFFFFFF">colors/selected.png</bordertexture>
                    <bordersize>3</bordersize>
                    <colordiffuse>ffFFFFFF</colordiffuse>
                </control>
                <control type="group">
                    <posx>0</posx>
                    <posy>272</posy>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>363</width>
                        <height>64</height>
                        <aspectratio>stretch</aspectratio>
                        <texture>colors/selected.png</texture>
                        <bordersize>0</bordersize>
                        <colordiffuse>ffFFFFFF</colordiffuse>
                    </control>
                    <control type="label">
                        <posx>12</posx>
                        <posy>-11</posy>
                        <width>339</width>
                        <font>itemTitleSmallCondensed</font>
                        <textcolor>black</textcolor>
                        <shadowcolor>-</shadowcolor>
                        <label>$INFO[listitem.Title]</label>
                    </control>
                    <control type="label">
                        <posx>12</posx>
                        <posy>18</posy>
                        <width>339</width>
                        <font>smallMedium</font>
                        <textcolor>black</textcolor>
                        <shadowcolor>-</shadowcolor>
                        <label>$INFO[listitem.year,, •] $INFO[listitem.duration,, $LOCALIZE[31018]]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>
    </include>
