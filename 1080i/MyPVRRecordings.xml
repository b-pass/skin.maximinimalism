<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9950</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <onload condition="Skin.hassetting(stopVideoOnMenu) + !Player.HasAudio">PlayerControl(stop)</onload>
    <onunload>Skin.SetString(showRecentVideoItems,true)</onunload>
    <controls>
        <include>globalBackground</include>
        <!--page container group-->
        <control type="group">
            <!--window fader-->
            <animation type="conditional" condition="window.next(0) | window.next(1)">
                <effect type="fade" start="100" end="0" time="300"/>
            </animation>
            <!--shift page for certain modal dialogs-->
            <include>modalDialogContentShift</include>
            <!--content provider-->
            <control type="group">
                <posx>0</posx>
                <posy>0</posy>
                <!--main menu-->
                <control type="group" id="8000">
                    <posx>col-0-begin</posx>
                    <posy>row-1-begin</posy>
                    <include>dateTime</include>
                    <!--include>menuItems</include-->
                </control>
                <!--Folder titles-->
                <control type="group">
                    <posx>col-4-begin</posx>
                    <posy>row-1-begin</posy>
                    <!--source title-->
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>14-col</width>
                        <font>pageTitle</font>
                        <label>$LOCALIZE[31165] $INFO[Container.FolderName,(,)]</label>
                        <textcolor>selected</textcolor>
                    </control>
                    <control type="label">
                        <posx>0</posx>
                        <posy>45</posy>
                        <width>14-col</width>
                        <font>regular</font>
                        <!--label>$INFO[container.numitems] $LOCALIZE[31165]</label-->
                        <label>$INFO[Pvr.BackendDiskSpace]</label>
                        <textcolor>selected</textcolor>
                    </control>
                </control>
                <!--Main content listing-->
                <control type="list" id="50">
                    <visible>false</visible>
                </control>
                <control type="group" id="9999">
                    <posx>col-1-begin</posx>
                    <posy>row-4-begin</posy>
                    <!--animations-->
                    <animation type="windowopen">
                        <include>listSlideIn</include>
                    </animation>
                    
                    <control type="list" id="9950">
                        <posx>-12</posx>
                        <posy>-12</posy>
                        <width>6-col</width>
                        <height>13-row</height>
                        <onright>9990</onright>
                        <onclick>Control.SetFocus(9990,0)</onclick>
                        <content sortby="label" sortorder="ascending" target="noop">$INFO[Container(50).FolderPath]</content>
                        <itemlayout width="8-col" height="1-row">
                            <control type="image">
                                <posx>0</posx>
                                <posy>2</posy>
                                <width>6-col</width>
                                <height>53</height>
                                <aspectratio>stretch</aspectratio>
                                <texture border="24,0,24,0">UIControls/listitemNF.png</texture>
                                <bordersize>0</bordersize>
                                <colordiffuse>99FFFFFF</colordiffuse>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>6-col-gutter</width>
                                <font>itemTitle</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>-</shadowcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </itemlayout>
                        <focusedlayout width="8-col" height="1-row" condition="Control.HasFocus(9950)">
                            <control type="image">
                                <posx>0</posx>
                                <posy>2</posy>
                                <width>6-col</width>
                                <height>53</height>
                                <aspectratio>stretch</aspectratio>
                                <texture border="24,0,24,0">UIControls/listitemFO.png</texture>
                                <bordersize>0</bordersize>
                                <colordiffuse>FFFFFFFF</colordiffuse>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>6-col-gutter</width>
                                <font>itemTitle</font>
                                <textcolor>black</textcolor>
                                <selectedcolor>black</selectedcolor>
                                <shadowcolor>-</shadowcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </focusedlayout>
                        <focusedlayout width="8-col" height="1-row" condition="!Control.HasFocus(9950)">
                            <control type="image">
                                <posx>0</posx>
                                <posy>2</posy>
                                <width>6-col</width>
                                <height>53</height>
                                <aspectratio>stretch</aspectratio>
                                <texture border="24,0,24,0">UIControls/listitemFO.png</texture>
                                <bordersize>0</bordersize>
                                <colordiffuse>80808080</colordiffuse>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>6-col-gutter</width>
                                <font>itemTitle</font>
                                <textcolor>selected</textcolor>
                                <selectedcolor>selected</selectedcolor>
                                <shadowcolor>-</shadowcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </focusedlayout>
                    </control>
                    
					<control type="group" id="9990">
						<control type="group" id="9991">
							<visible>!StringCompare(Container(9950).ListItem.Label,"(Recent)")</visible>
							<include name="PvrRecordingDetails">
								<param name="ListId">9901</param>
								<param name="ScrollId">9902</param>
								<param name="SortOrder">ascending</param>
							</include>
						</control>
						<control type="group" id="9992">
							<visible>StringCompare(Container(9950).ListItem.Label,"(Recent)")</visible>
							<include name="PvrRecordingDetails">
								<param name="ListId">9903</param>
								<param name="ScrollId">9904</param>
								<param name="SortOrder">descending</param>
							</include>
						</control>
					</control>
                </control>
                
                <!--Sort / misc labels (footer)-->
                <control type="group">
                    <posx>col-3-begin</posx>
                    <posy>row-17-begin</posy>
                    <control type="label">
                        <width>40</width>
                        <font>symbol</font>
                        <textcolor>selected</textcolor>
                        <label>ï„’</label>
                    </control>
                    <control type="label">
                        <posx>30</posx>
                        <width>2-col</width>
                        <font>buttonTitle</font>
                        <textcolor>selected</textcolor>
                        <label>$LOCALIZE[31038] $INFO[container(9950).currentpage] / $INFO[container(9950).numpages]</label>
                    </control>
                </control>
            </control>
        </control>
        <!--sorting and misc controls-->
        <!--control type="group" id="61">
            <control type="group">
                <posx>24</posx>
                <posy>111</posy>
                <animation type="Conditional" condition="controlgroup(62).hasfocus">
                    <effect type="fade" start="0" end="100" time="300"/>
                    <effect type="slide" start="-200" end="0" tween="sine" easing="out" time="400"/>
                </animation>
                <animation type="Conditional" condition="!controlgroup(62).hasfocus | Window.IsActive(5000) | Window.IsActive(5900)">
                    <effect type="fade" start="100" end="0" time="400"/>
                    <effect type="slide" start="0" end="-200" tween="sine" easing="out" time="400"/>
                </animation>
                <include>sideBarMenuItems</include>
            </control>
        </control-->
        <!--debugging-->
        <include>DebugGrid</include>
        <control type="label">
            <include>DialogID</include>
            <label>MyPVRRecordings.xml - $INFO[Container.FolderPath]</label>
        </control>
    </controls>
</window>
